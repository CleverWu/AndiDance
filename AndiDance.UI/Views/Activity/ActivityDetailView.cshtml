<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>活动详情</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit">
    <link rel="stylesheet" type="text/css" href="./css/global.css">
    <link rel="stylesheet" type="text/css" href="./css/andi.css">
    <script src="./js/jquery/dist/jquery.min.js"></script>
    <!--[if lt IE 9]><script src="./js/html5shiv/dist/html5shiv.min.js"></script><![endif]-->
    <script src="./js/angular/angular.js"></script>
    <script src="./js/layer/layer.js"></script>
    <script src="./js/c_main.js"></script>
    <script src="./js/CommonService/CommonService.js"></script>

</head>
<body ng-app="AnDi">
    <div class="container" ng-controller="cMain">
        <header>
            <div class="top">
                <div class="top-logo" ng-click="goIndex()">
                    <p class="cn">安迪街舞会员管理系统</p>
                    <p class="en">ANDI MEMBER MANAGE SYSTEM</p>
                </div>
                <div class="info">
                    <a href="#" class="loginout"><img src="img/icon_loginout.png" alt=""></a>
                    <span class="info_txt">张飞云，欢迎登陆</span>
                </div>
            </div>
        </header>
        <nav class="navLeft">
            <ul>
                <li ng-repeat="nav in navList">
                    <div class="navTitle" ng-click="isActive($index)">{{nav.title}}</div>
                    <div class="navContent" ng-show="navIndex==$index">
                        <a ng-repeat="subNav in nav.content track by $index" href={{subNav.link}}><p>{{subNav.subName}}</p></a>
                    </div>
                </li>
            </ul>
        </nav>
        <div class="content" ng-controller="activityDetail">
            <!--活动绑定套餐弹框-->
            <div class="commonPopUp bindPackage">
                <div class="commonPopUp-title">
                    绑定至套餐
                </div>
                <div class="commonPopUp-content">
                    <input placeholder="请输入您要搜索内容" class="zfx-input ml10 mb10">
                    <button class="btn_common">搜索</button>
                    <table>
                        <tbody>
                            <tr>
                                <th>选择</th>
                                <th>套餐名</th>
                                <th>价格</th>
                                <th>课时</th>
                                <th>时限</th>
                            </tr>
                            <tr>
                                <td><input type="checkbox"></th>
                                <td>30天20次套餐</td>
                                <td>450元</td>
                                <td>40课时</td>
                                <td>30天</td>
                            </tr>
                            <tr>
                                <td><input type="checkbox"></th>
                                <td>10天20次套餐</td>
                                <td>45元</td>
                                <td>4课时</td>
                                <td>10天</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="pagebox">
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">...</a>
                        <a href="#">90</a>
                        <a href="#">&gt;</a>
                    </div>
                </div>
                <div class="commonPopUp-footer textCenter pb10">
                    <button class="btn_common inlineBlock t-ffffff b-11cd6e">确定</button><button class="btn_common inlineBlock ml5 ">取消</button>
                </div>

            </div>
            <div class="commonBox">
                <div class="commonBoxTitle clearfix">
                    <p>活动详情</p>
                    <button>返回</button>
                    <button ng-click="switch =!switch">编辑</button>
                    <button>提交</button>
                </div>
                <hr class="mt20">
                <div class="commonBoxContent">
                    <table class="addCommonTable">
                        <tbody>
                            <tr>
                                <td>活动名称：</td>
                                <td><input type="text" ng-disabled="switch "></td>
                                <td>所属：</td>
                                <td><select ng-disabled="switch "><option>请选择</option><option>所有</option><option>XXX</option></select></td>
                            </tr>
                            <tr>
                                <td>活动开始时间：</td>
                                <td><input ng-disabled="switch " type="date"></td>
                                <td>活动结束时间：</td>
                                <td><input ng-disabled="switch " type="date"></td>
                            </tr>
                            <tr>
                                <td class="vTop">活动介绍：</td>
                                <td><textarea ng-disabled="switch " class="w300 h100"></textarea></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <h1 class="f16 fl">已参加该活动的套餐有：</h1><button class="fr btn_common" ng-click="bindPackage()">添加套餐</button>
                    </div>
                    <table class="nowPackegTable textCenter">
                        <tbody>
                            <tr>
                                <th>套餐名</th>
                                <th>活动价格</th>
                                <th>活动课时</th>
                                <th>活动时限</th>
                                <th>添加时间</th>
                            </tr>
                            <tr>
                                <td>30天20次套餐</td>
                                <td>450元</td>
                                <td>60课时</td>
                                <td>60天</td>
                                <td>2016-1-1</td>
                            </tr>
                            <tr>
                                <td>30天20次套餐</td>
                                <td>450元</td>
                                <td>60课时</td>
                                <td>60天</td>
                                <td>2016-1-1</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="pagebox mt10">
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">...</a>
                        <a href="#">90</a>
                        <a href="#">&gt;</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>